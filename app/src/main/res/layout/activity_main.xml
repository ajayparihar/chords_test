<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btest"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/b2test"
        android:layout_marginBottom="40dp"
        android:background="@drawable/buttonshape"
        android:gravity="center|center_horizontal|center_vertical"
        android:shadowColor="#ff2f71f4"
        android:text="@string/c_maj"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:fontFamily="@font/intut"
        tools:text="C MAJ" />

    <Button
        android:id="@+id/b2test"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/b3test"
        android:layout_marginBottom="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#ff2f71f4"
        android:text="@string/d_min"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:fontFamily="@font/intut"
        tools:text="d min" />

    <Button
        android:id="@+id/b3test"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/b4test"
        android:layout_marginBottom="40dp"
        android:background="@drawable/buttonshape"
        android:gravity="center|center_horizontal|center_vertical"
        android:shadowColor="#ff2f71f4"
        android:text="@string/e_min"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:fontFamily="@font/intut"
        tools:text="e min" />

    <Button
        android:id="@+id/b4test"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/buttonshape"
        android:gravity="center|center_horizontal|center_vertical"
        android:shadowColor="#ff2f71f4"
        android:text="@string/f_maj"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:fontFamily="@font/intut"
        tools:text="F MAJ" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btest"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/chords"
        android:textColor="#00203F"
        android:textSize="70sp"
        app:fontFamily="@font/intut" />

</RelativeLayout>